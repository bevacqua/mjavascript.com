iframe,
img,
  border none
  max-width 100%

iframe
  display block

b,
strong,
  font-weight bold

i,
em,
  font-style italic

ins
  text-decoration none

del
  text-decoration line-through

sub,
sup
  bottom 0
  line-height 1.125em

input,
textarea,
select,
button
  font inherit

a
  color inherit
  text-decoration none

input,
button
  border-radius 0

button
  border none
  padding 0.375em 0.5em
  font-size 1.2em
  background transparent

ul,
ol
  padding 0
  margin 0
  list-style-position inside

ul
  list-style-type disc

li
  > ul,
  > ol
    margin-left 1em

blockquote
  margin 0
  padding 1.2em

p
  &:first-child
    margin-top 0

  &:last-child
    margin-bottom 0
